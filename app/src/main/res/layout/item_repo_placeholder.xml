<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_marginLeft="@dimen/margin_horizontal_15"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/margin_horizontal_15"
            android:layout_marginBottom="20dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/radius_avatar"
            card_view:cardPreventCornerOverlap="false">

            <View
                android:id="@+id/view_img"
                android:layout_width="@dimen/size_avatar"
                android:layout_height="@dimen/size_avatar"
                android:background="@color/placeholder_bg"
                />



        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/margin_horizontal_15"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view_head"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_size_12"
                    android:layout_marginBottom="@dimen/margin_bottom_text_8"
                    android:background="@color/placeholder_bg"
                    android:fontFamily="sans-serif-medium" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_text_5"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_text_heading_16"
                    android:layout_marginBottom="@dimen/margin_bottom_text_8"
                    android:background="@color/placeholder_bg"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>